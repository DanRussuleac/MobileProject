<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:padding="16dp">

    <!-- ImageView for displaying the app's logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="269dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/homepage" />

    <!-- TextView for displaying the app's name -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dan's Fitness App"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- LinearLayout to contain and organize buttons vertically -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppName"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Button to navigate to the Dashboard -->
        <Button
            android:id="@+id/btnGoToDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded"
            android:elevation="4dp"
            android:text="Dashboard" />

        <!-- Button to navigate to the Workout Log -->
        <Button
            android:id="@+id/btnGoToWorkoutLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded"
            android:elevation="4dp"
            android:text="Workout Log" />

        <!-- Button to navigate to Goals and Achievements -->
        <Button
            android:id="@+id/btnGoToGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded"
            android:elevation="4dp"
            android:text="Goals and Achievements" />

        <!-- Button to navigate to Health Score -->
        <Button
            android:id="@+id/btnGoToHealthScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded"
            android:elevation="4dp"
            android:text="Health Score" />

    </LinearLayout>

</RelativeLayout>
